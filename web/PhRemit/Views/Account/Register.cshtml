@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container body-content">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-12">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4>Create a new account.</h4>
                <hr />
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="FirstName"></label><label class="text-danger">*</label>
                            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="MiddleName"></label>
                            <input asp-for="MiddleName" class="form-control" placeholder="Middle Name" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="LastName"></label><label class="text-danger">*</label>
                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="well well-sm text-warning">
                            IMPORTANT: Please type in your full name AS SHOWN ON YOUR VALID ID. If the name on your ID does not match the information you type in here, you might have difficulty collecting your remittance/s.
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Email"></label><label class="text-danger">*</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label><label class="text-danger">*</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Mobile Number (Australia)" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="well well-sm text-warning">
                            IMPORTANT: Please key in your active email address to get timely updates about your transactions from us.
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="well well-sm text-warning">
                            IMPORTANT: This must be a working AU number so we can contact you for verification, among other concerns.
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Password"></label><label class="text-danger">*</label>
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label asp-for="ResidentialAddress"></label><label class="text-danger">*</label>
                            <input asp-for="ResidentialAddress" class="form-control" placeholder="Residential Address" />
                            <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Country"></label><label class="text-danger">*</label>
                            <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                            @*@Html.DropDownList("CountryId", null, htmlAttributes: new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="State"></label><label class="text-danger">*</label>
                            <select asp-for="StateId" class="form-control" asp-items="ViewBag.StateId"></select>
                            @*@Html.DropDownList("StateId", null, htmlAttributes: new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="City"></label><label class="text-danger">*</label>
                            <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                            @*@Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Postal Code</label><label class="text-danger">*</label>
                            <input asp-for="ResidentialAddress" class="form-control" placeholder="Postal Code" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Nationality"></label>
                            <select asp-for="NationalityId" class="form-control" asp-items="ViewBag.NationalityId"></select>
                            @*@Html.DropDownList("NationalityId", null, htmlAttributes: new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="CivilStatus"></label><label class="text-danger">*</label>
                            <select asp-for="CivilStatusId" class="form-control" asp-items="ViewBag.CivilStatusId"></select>
                            @*@Html.DropDownList("CivilStatusId", null, htmlAttributes: new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="BirthDate"></label><label class="text-danger">*</label>
                            <div class="input-group date" data-provide="datepicker">
                                <input asp-for="BirthDate" class="form-control" placeholder="Birthdate" />
                                <div class="input-group-addon glyphicon glyphicon-calendar"></div>
                            </div>
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="SecondaryEmail"></label>
                            <input asp-for="SecondaryEmail" class="form-control" placeholder="Secondary Email" />
                            <span asp-validation-for="SecondaryEmail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="IdentificationType"></label><label class="text-danger">*</label>
                            <select asp-for="IdentificationTypeId" class="form-control" asp-items="ViewBag.IdentificationTypeId"></select>
                            @*@Html.DropDownList("IdentificationTypeId", null, htmlAttributes: new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="IdentificationNumber"></label><label class="text-danger">*</label>
                            <input asp-for="IdentificationNumber" class="form-control" placeholder="ID Number" />
                            <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="ExpirationDate"></label><label class="text-danger">*</label>
                            <div class="input-group date" data-provide="datepicker">
                                <input asp-for="ExpirationDate" class="form-control" placeholder="Expiration Date" />
                                <div class="input-group-addon glyphicon glyphicon-calendar"></div>
                            </div>
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="PromoCode"></label>
                            <input asp-for="PromoCode" class="form-control" placeholder="Promo Code" />
                            <span asp-validation-for="PromoCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Register</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
